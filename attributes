# default version for mongo install
default['mongodb3']['version'] = '3.6.4'

# requires SSL
default['mongodb3']['config']['mongod']['net']['ssl']['mode'] = 'requireSSL'
default['mongodb3']['config']['mongod']['net']['ssl']['PEMKeyFile'] = '/etc/ssl/mongodb.pem'
